<!DOCTYPE html>
<html>
<% include ./include/head %>

    <body>
        <% include ./include/nav %>

            <div class="container">

                <form action="/register" method="POST" id="register-form">
                    <h4>Register</h4>
                    <div class="row">
                        <div class="col-25">
                            <label for="firstname">First Name</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="first-name" name="firstname" value="<%= locals.firstName? firstName:null%>" required>
                        </div>
                    </div>
                    <p><%= locals.firstNameError? firstNameError:null%></p>
                    <div class="row">
                        <div class="col-25">
                            <label for="lastname">Last Name</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="last-name" name="lastname" value="<%= locals.lastName? lastName:null%>" required>
                        </div>
                    </div>
                    <p><%= locals.lastNameError? lastNameError:null%></p>
                    <div class="row">
                        <div class="col-25">
                            <label for="username">Username</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="user-name" name="username" value="<%= locals.userName? userName:null%>" required>
                        </div>
                    </div>
                    <p><%= locals.userNameError? userNameError:null%></p>
                    <div class="row">
                        <div class="col-25">
                            <label for="email">Email</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="email" name="email" value="<%= locals.email? email:null%>" required>
                        </div>
                    </div>
                    <p><%= locals.emailError? emailError:null%></p>
                    <div class="row">
                        <div class="col-25">
                            <label for="password">Password</label>
                        </div>
                        <div class="col-75">
                            <input type="password" id="password" name="password" required>
                        </div>
                    </div>
                    <p><%= locals.passwordError? passwordError:null%></p>
                    <div class="row">
                        <div class="col-25">
                            <label for="confirm-password">Confirm Password</label>
                        </div>
                        <div class="col-75">
                            <input type="password" id="confirm-password" name="confirm-password" required>
                            <img src="/images/ok.png" id="ok" style="width: 50px;">
                        </div>
                    </div>

                    <div class="row">
                        <input type="submit" value="Submit" id="submit-register">
                    </div>
                </form>
            </div>
            <p><%= locals.message? message:null%></p>
            <div class="spacer"></div>
            <% include ./include/footer %>
    </body>

</html>